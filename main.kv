

FloatLayout:

    Background:
        id: background
        canvas.before:

            #sky
            Rectangle:
                #screen size
                size: self.size
                pos: self.pos
                source: "sky.png"

            #clouds
            Rectangle:
                id:clouds
                size: self.width, self.height
                pos: 0, self.height/1.2
                #size: self.width, self.height
                #pos: 0, self.height/1.4
                texture: self.clouds_texture

            #grass
            Rectangle:
                id:grass
                #size: self.width, 70
                size: self.width, self.height/7
                pos : 0,0
                #pos:self.pos
                texture: self.grass_texture

            #pines
            Rectangle:
                id:pines
                size: self.width, 130
                #size: self.width, self.height/3
                #pos:0,70
                pos: 0,0
                texture: self.pines_texture

            #red_pines
            Rectangle:
                id:red
                #size: self.width, 70
                size: self.width, self.height/2.7
                pos:0,100
                texture: self.red_texture

