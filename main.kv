

FloatLayout:

    Background:
        id: background
        canvas.before:

            #sky
            Rectangle:
                id: sky
                #screen size
                size: self.size
                pos: self.pos

                source: "sky.png"


            #clouds
            Rectangle:
                id:clouds
                size: self.width, self.height
                pos: 0, self.height/1.2
                #size: self.width, self.height
                #pos: 0, self.height/1.4
                texture: self.clouds_texture

            #grass
            Rectangle:
                id:grass
                #size: self.width, 70
                size: self.width, 70
                pos : 0,10
                #pos:self.pos
                texture: self.grass_texture

            #red_pines/ mountains
            Rectangle:
                id:red
                #size: self.width, 60
                size: self.width, self.height/2.7
                pos:0,70
                texture: self.red_texture

            #water
         #  Rectangle:
               # id:water
               # size: self.width, self.height/3
               # pos:0, 140
               # texture: self.water_texture


    Button:
        text:"Play"
        size_hint: None, None
        size: 80,80
        pos: 0,0
        background_color: (0,0,0)


        on_release:
            app.start()


    Label:
        id: label
        text:"Lives   " + str( app.life) + "\n" + "Score   " + str( app.score)
        font_size: 20
        size_hint: None, None
        size: 150,70
        pos: 100,0

        canvas.before:

            Rectangle:
                size: self.size
                pos:self.pos
        color: (179,250,22,1)

    Balloon:
        id: balloon
        source: "ballon_low.png"
        size_hint:None, None
        size: 737/7,1277/7
        #size: 737/6,1277/6
        pos: 20, 250

    Pines:
        id: pines
        source: "pines.png"
        size_hint:None, None
        size: 1903/4,1145/4
        #size: self.width * 10, self.height * 10
        pos: 600, 60


#loose lives:
    Volcano:
        id: volcano
        source: "volcane_low.png"
        size_hint: None, None
        size: 300*2, 130*2
        pos:300,70

#win points
    Purple_cloud:
        id: purple_cloud
        source: "purple_cloud.png"
        size_hint: None, None
        size: 598/4, 401/4
        pos: 100, self.height+350

    Bor_cloud:
        id: bor_cloud
        source: "red_cloud.png"
        size_hint: None, None
        size: 598/3, 401/3
        pos: 300, self.height+400

    Yell_cloud:
        id: yell_cloud
        source: "yell_cloud.png"
        size_hint: None, None
        size: 598/4, 401/4
        pos:600, self.height+300


